
@{
    ViewData["Title"] = "Update";
    ViewData["ActivePage"] = "Stores";
}

@model Task2.BLL.DTOs.StoreDTOs.StoreDetailDTO


<div class="container-fluid pt-4 px-4">
    <div class="col-sm-12 col-xl-6">
        <div class="bg-light rounded h-100 p-4">
            <h6 class="mb-4">Update Store</h6>
            <form asp-action="Update" method="post">
                <input type="hidden" asp-for="@Model.StorId" />
                <div class="row mb-3">
                    <label asp-for="@Model.StorName" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.StorName" class="form-control" id="inputStoreName">
                        <span asp-validation-for="@Model.StorName" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="@Model.StorAddress" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.StorAddress" class="form-control" id="inputStoreAddress">
                        <span asp-validation-for="@Model.StorAddress" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="@Model.City" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.City" class="form-control" id="inputStoreCity">
                        <span asp-validation-for="@Model.City" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="@Model.State" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.State" class="form-control" id="inputStoreState">
                        <span asp-validation-for="@Model.State" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <label asp-for="@Model.Zip" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input asp-for="@Model.Zip" class="form-control" id="inputStoreZip">
                        <sup>Zip is a string follow the pattern: "12345-6789"</sup>
                        <span asp-validation-for="@Model.Zip" class="text-danger d-block"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>
